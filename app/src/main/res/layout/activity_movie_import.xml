<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Movie_import">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_title"
         android:text="@string/movie_detail_title"/>
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_title_value"
         android:layout_alignRight="@id/movie_detail_title"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_actor"
         android:layout_below="@id/movie_detail_title"
         android:layout_marginTop="2dp"
         android:text="@string/movie_detail_actor"/>
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/movie_detail_title_value"
         android:id="@+id/movie_detail_actor_value"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_year"
         android:text="@string/movie_detail_year"
         android:layout_marginTop="2dp"
         android:layout_below="@id/movie_detail_actor"/>
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_year_value"
         android:layout_below="@id/movie_detail_actor_value"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/movie_detail_rating"
         android:layout_below="@id/movie_detail_year"
         android:layout_marginTop="2dp"
         android:id="@+id/movie_detail_rating"/>
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/movie_detail_year_value"
         android:id="@+id/movie_detail_rating_value"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_runtime"
         android:layout_marginTop="2dp"
         android:layout_below="@id/movie_detail_rating"
         android:text="@string/movie_detail_runtime"/>
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_runtime_value"
         android:layout_below="@id/movie_detail_rating_value"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_plot"
         android:text="@string/movie_detail_plot"
         android:layout_marginTop="2dp"
         android:layout_below="@id/movie_detail_runtime"/>
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_plot_value"
         android:layout_below="@id/movie_detail_runtime_value"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_url"
         android:layout_marginTop="2dp"
         android:text="@string/movie_detail_url"
         android:layout_below="@id/movie_detail_plot"/>
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/movie_detail_url_value"
         android:layout_below="@id/movie_detail_plot_value"/>
 </RelativeLayout>

    <Button
        android:id="@+id/movie_import_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:text="@string/movie_detail_cancel" />

    <Button
        android:id="@+id/movie_import_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/movie_import_download" />
    <ProgressBar
        android:id="@+id/movie_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

</LinearLayout>