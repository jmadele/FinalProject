<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".FoodNutrition_ListItemsActivity">
    <ImageView
        android:id="@+id/food_item_img"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_gravity="left"
        android:paddingHorizontal="50dp"
        android:src="@drawable/food_nutrition"
        />
    <TextView
        android:id="@+id/food_item_name"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/food_item_img"
        android:layout_toRightOf="@id/food_item_img"
        />
</RelativeLayout>