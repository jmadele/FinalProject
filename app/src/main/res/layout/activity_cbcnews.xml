<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".CBCNewsActivity">

    <EditText
        android:id="@+id/CBC_editText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:hint="@string/CBC_inputText"
        android:inputType="text" />
    <!--<ImageView-->
        <!--android:id="@+id/CBC_Image"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="#000FFF"-->
         <!--/>-->

    <Button
        android:id="@+id/CBC_SearchNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/CBC_SearchNews" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/cbc_toolbar"
        android:layout_width="33dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/CBC_SearchNews" >
    </android.support.v7.widget.Toolbar>


    <ProgressBar
        android:id="@+id/CBC_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:background="@color/red" />

    <ListView
        android:id="@+id/CBC_listView"
        android:layout_width="match_parent"
        android:layout_height="493dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:focusableInTouchMode="true"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:scrollbars="vertical"
        android:visibility="visible" />

</RelativeLayout>